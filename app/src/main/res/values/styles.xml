<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorHint">@color/textHint</item>
    </style>

    <!-- Since the accent colour is quite dark - default from the darker theme so that the click state is light and the text is white -->
    <style name="AccentButton" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@color/accent</item>
    </style>


</resources>
